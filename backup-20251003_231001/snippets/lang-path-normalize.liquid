{%- assign lang_base_path = path -%}
{%- if lang_base_path == '/fr' or lang_base_path contains '/fr/' -%}
  {%- assign lang_base_path = lang_base_path | remove_first: '/fr' -%}
{%- endif -%}
{%- if lang_base_path == '/de' or lang_base_path contains '/de/' -%}
  {%- assign lang_base_path = lang_base_path | remove_first: '/de' -%}
{%- endif -%}
{%- if lang_base_path == '/' -%}
  {%- assign lang_base_path = '' -%}
{%- endif -%}
