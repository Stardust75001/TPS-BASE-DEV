{%- assign pairs = raw_pairs | strip_newlines | replace: '  ', '' | split: ',' -%}
{%- assign out = '' -%}

{%- if expose == 'pantone_handle' -%}
  {%- assign key = color | default: '' | downcase | strip | handleize -%}
  {%- for pair in pairs -%}
    {%- assign kv = pair | split: ':' -%}
    {%- assign left = kv[0] | downcase | strip | handleize -%}
    {%- if left == key -%}
      {%- assign out = kv[1] | strip -%}
      {%- break -%}
    {%- endif -%}
  {%- endfor -%}
  {{- out -}}
{%- elsif expose == 'noop' -%}
  {%- comment -%}no-op{%- endcomment -%}
{%- endif -%}
